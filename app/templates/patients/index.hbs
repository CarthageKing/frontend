<div class="container patients">
  <div class="title-panel">
    <span class="title-text">Patients</span>
  </div>

  <div class="row">

    {{!--------------------- PATIENT LIST -----------------------------------}}

    <div class="col-sm-3 patient-populations-list">
      {{populations-list populations=content.populations}}

      <div class="panel patients-panel">
        <div class="panel-heading">
          <div class="collapse-panel-title">
            <a data-toggle="collapse" href="#choosePatient" aria-expanded="true" aria-controls="collapseOne">
              Choose Patient
              <i class="fa fa-chevron-down pull-right"></i>
            </a>
          </div>
        </div>

        <div class="panel-body patient-list">
          <div class="timeline-icon-search">
            <i class="fa fa-user timeline-icon"></i>

            <div class="row timeline-search">
              <div class="col-lg-6">
                <div class="input-group">
                  <span class="input-group-btn">
                    <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
                  </span>
                  {{input type="text" class="form-control" value=patientSearch placeholder="Search patients..."}}
                </div>
              </div>
            </div>
          </div>
          <div class="collapse in" id="choosePatient">
            <div class="patients-striped">
              {{#if selectedItems}}
                {{#each item in selectedItems}}
                  {{#each patient in item.groupList.patientids}}
                    {{patient-badge patient=patient currentPatient=currentPatient}}
                  {{/each}}
                {{/each}}
              {{else}}
                {{#each patient in filteredPatients}}
                  {{patient-badge patient=patient currentPatient=currentPatient}}
                {{/each}}
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>

    {{!--------------------- PATIENT SUMMARY --------------------------------}}

    <div class="col-sm-9 patient-results">
      <div class="panel patient-panel">
        <div class="panel-heading">
          <div class="panel-title">
            View Results
          </div>
        </div>

        <div class="panel-body">
          {{#if currentPatient}}
            {{patient-viewer patient=currentPatient}}
          {{else}}
            <div class="select-patient sub-text">
              Please select patient.
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
