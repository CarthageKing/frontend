<form class="form-horizontal filter-item">
  <div class="form-group">
    <input type="checkbox" id={{checkboxName}} name="checkbox-condition-code" class="css-checkbox" checked={{checkboxChecked}} {{action 'toggle' on='change'}}>
    <label for={{checkboxName}} class="css-label css-label-box checkbox-label">
      {{#if active}}
        Condition code is
      {{else}}
        Condition Code
      {{/if}}
    </label>
  </div>

  <div class="form-group">
    {{#if active}}
      <div class="row selected-filter-details">
        <div class="col-sm-12">
          <div class="formgroup">
            <label>System</label>
            {{view "select" value=system content=codingSystems optionValuePath="content.url" optionLabelPath="content.system" class="form-control"}}
          </div>
          <div class="formgroup">
            <label>Code</label>
            {{input classNames="input-control condition" placeholder="input condition code" value=codeValue}}
          </div>
        </div>
      </div>
    {{/if}}
  </div>
</form>
