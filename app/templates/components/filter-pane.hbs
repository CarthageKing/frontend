<div class="col-xs-2 pane-icon">
  <i class="fa fa-fw {{icon}}"></i>
</div>

<div class="col-xs-10">
  <div class="row pane-content">
    <div class="col-xs-11">
      <div class="row">
        {{component filterType characteristic=characteristic createCharacteristic="createCharacteristic" destroyCharacteristic="destroyCharacteristic"}}
      </div>
    </div>

    <div class="col-xs-1">
      <button type="button" class="close" {{action "removePane"}} aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <span class="pointer-bottom"></span>
    <span class="pointer-top"></span>
  </div>
</div>