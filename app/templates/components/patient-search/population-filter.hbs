<div class="panel populations-panel">
  <div class="panel-heading">
    <div class="collapse-panel-title">
      <a data-toggle="collapse" href="#choosePopulation" aria-expanded="true" aria-controls="collapseOne">
        Populations
        <i class="fa fa-chevron-down pull-right"></i>
      </a>
    </div>
  </div>

  <div class="panel-body">
    <div class="collapse in" id="choosePopulation">
      <form class="form-horizontal form-group-striped">
        {{#each populations as |population|}}
          {{#if population.name}}
            <div class="form-group">
              <input type="checkbox"
                id={{population.id}}
                checked={{eq selectedPopulation population}}
                class="css-checkbox"
                onchange={{action 'togglePopulation' population}}>
              <label for={{population.id}} class="css-label css-label-box checkbox-label">
                {{population.name}}
              </label>
              {{#link-to 'filters.show' population}}
                <i class="fa fa-edit pull-right"></i>
              {{/link-to}}
            </div>
          {{/if}}
        {{/each}}
        <div class="add-new-filter">
          {{#link-to 'filters.new'}}<i class="fa fa-plus-circle"></i> add new{{/link-to}}
        </div>
      </form>
    </div>
  </div>
</div>
