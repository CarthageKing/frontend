<div class="panel populations-panel">
  <div class="panel-heading">
    <div class="collapse-panel-title">
      <a data-toggle="collapse" href="#chooseRiskScore" aria-expanded="true" aria-controls="collapseOne">
        Risk Score
        <i class="fa fa-chevron-down pull-right"></i>
      </a>
    </div>
  </div>

  <div class="panel-body">
    <div class="collapse in" id="chooseRiskScore">
      <div class="low-value">{{minValue}}</div>
      <input type="text" id="riskSlider" />
      <div class="high-value">{{maxValue}}</div>
    </div>
  </div>
</div>
