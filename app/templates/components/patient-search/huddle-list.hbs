<div class="panel populations-panel">
  <div class="panel-heading">
    <div class="collapse-panel-title">
      <a data-toggle="collapse" href="#chooseHuddleList" aria-expanded="true" aria-controls="collapseOne">
        Huddles
        <i class="fa fa-chevron-down pull-right"></i>
      </a>
    </div>
  </div>

  <div class="panel-body">
    <div class="collapse in" id="chooseHuddleList">
      <form class="form-horizontal form-group-striped">
        <div class="form-group">
          <input
            id="huddleList1"
            type="checkbox"
            class="css-checkbox"
            checked={{active}}
            onclick={{action 'toggle'}}>
          <label for="huddleList1" class="css-label css-label-box checkbox-label">
            Geriatrics Huddle
          </label>
          <div class="date-selector" id="huddleFilterSelector">
            {{#if selectedHuddle}}
              {{moment-format selectedHuddle.date 'll'}}
            {{else}}
              <em>Not Selected</em>
            {{/if}}
            <span class="fa fa-chevron-down"></span>
            <input type="hidden" id="huddleFilterInput" value="">
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
