<form class="form-horizontal">
  <div class="form-group">
    <h4><label class="control-label">{{input type="checkbox" name=active checked=item.active}} Patient Gender</label></h4>
  </div>
  <div class="form-group">
    {{#if item.active}}
      <span class="col-sm-1">is</span>
      <span class="col-sm-2"><label>{{radio-button class="input-control" name=item.parameter.valueString value="M"}} Male</label></span>
      <span class="col-sm-2"><label>{{radio-button class="input-control" name=item.parameter.valueString value="F"}} Female</label></span>
      <span class="col-sm-2"><label>{{radio-button class="input-control" name=item.parameter.valueString value="O"}} Other</label></span>
      <span class="col-sm-2"><label>{{radio-button class="input-control" name=item.parameter.valueString value="U"}} Unknown</label></span>
    {{/if}}
  </div>
</form>
