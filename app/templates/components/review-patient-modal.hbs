{{#bootstrap-modal title="Review Patient" onOpen=attrs.onOpen onClose=attrs.onClose}}
  <form onsubmit={{action 'save'}}>
    <div class="modal-body">
      <div class="form-group">
        <label>Patient</label>
        <div class="form-control-static">
          {{patient.fullName}}
        </div>
      </div>
      <div class="form-group">
        <label>Huddle</label>
        <div class="form-control-static">
          Geriatrics Huddle
        </div>
      </div>
      <div class="form-group">
        <label>Huddle Date</label>
        <div class="form-control-static">
          {{moment-format huddle.date 'MMM DD, YYYY'}}
        </div>
      </div>
      <div class="form-group">
        <label>Leader</label>
        <div class="form-control-static">
          {{huddle.displayLeader}}
        </div>
      </div>
      <div class="form-group">
        <label for="reviewDate">Patient Reviewed on</label>
        {{pikaday-input
          id="reviewDate"
          class="form-control"
          value=reviewDate
          format="dddd, MMMM Do YYYY"
          firstDay=0}}
      </div>
    </div>
    <div class="modal-footer">
      <button type="submit" class="btn btn-primary" disabled={{saveBtnDisabled}}>Save</button>
    </div>
  </form>
{{/bootstrap-modal}}