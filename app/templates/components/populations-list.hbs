<div class="panel populations-panel">
  <div class="panel-heading">
    <div class="collapse-panel-title">
      <a data-toggle="collapse" href="#choosePopulation" aria-expanded="true" aria-controls="collapseOne">
        Choose Populations
        <i class="fa fa-chevron-down pull-right"></i>
      </a>
    </div>
  </div>

  <div class="panel-body">
    <div class="collapse in" id="choosePopulation">
      <form class="form-horizontal form-group-striped">
        {{#each population in populations}}
          {{#if population.name}}
            <div class="form-group">
              {{input type="checkbox" checked=population.selected elementId=population.id class="css-checkbox"}}
              <label {{bind-attr for="population.id"}} class="css-label css-label-box checkbox-label">
                {{population.name}}
              </label>
              <i class="fa fa-edit pull-right"></i>
            </div>
          {{/if}}
        {{/each}}
        <div class="add-new-filter">
          <a href="filters/new"><i class="fa fa-plus-circle"></i> add new</a>
        </div>
      </form>
    </div>
  </div>
</div>
