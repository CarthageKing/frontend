<div class="row pane">
  <div class="col-xs-2 pane-icon">
    <i class="fa fa-fw {{characteristic.icon}}"></i>
  </div>

  <div class="col-xs-10">
    <div class="row pane-content">
      <div class="col-xs-11">
        <div class="row">
          {{component characteristic.filter model=characteristic}}
        </div>
      </div>

      <div class="col-xs-1">
        <button type="button" class="close" {{action "removePane" model}} aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  </div>
</div>
