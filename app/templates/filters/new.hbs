<div class="panel">
  <h1>New Filter</h1>
</div>


  <div class="row">
      <div class="col-sm-3">
          <div class="filter-panel">
              <h3>Filter Type</h3>
              <hr>
              {{#x-drag templatePath="patient"}}<div class="filter"> <i class="fa fa-user fa-fw pull-left"></i>Patient</div>{{/x-drag}}
              {{#x-drag templatePath="encounter"}}<div class="filter"> <i class="fa fa-stethoscope fa-fw pull-left"></i>Encounter</div>{{/x-drag}}
              {{#x-drag templatePath="condition"}}<div class="filter"> <i class="icon-med-clipboard pull-left"></i>Condition</div>{{/x-drag}}

          </div>
      </div>

      <div class="col-sm-9">
          {{#x-drop action="addPane" model=model}}
            Filters?
          {{/x-drop}}
      </div>


<button {{action "saveFilter"}}>Save</button>
  </div>

{{json}}
