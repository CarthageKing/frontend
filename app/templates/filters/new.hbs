<div class="container">
  <div class="title-panel row">
    <div class="title-text col-sm-4">Filter Builder</div>
    <div class="filter-counts col-sm-8">
      <div class="row">
        <div class="count col-sm-3">
          <span class="count-value" id="patient-count">
            {{patientsCount}}
          </span><br/>
          <span>patients</span>
        </div>
        <div class="count col-sm-3">
          <span class="count-value" id="condition-count">
            {{conditionsCount}}
          </span><br/>
          <span>conditions</span>
        </div>
        <div class="count col-sm-3">
          <span class="count-value" id="encounter-count">
            {{encountersCount}}
          </span><br/>
          <span>encounters</span>
        </div>
        <div class="time-selection col-sm-3">
          <span>in the last</span><br/>
          <span class="time-period">year</span>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <div class="panel filter-type-panel">
        <div class="panel-heading">
          <div class="panel-title">
            <h3>Filter Type</h3>
          </div>
        </div>

        <div class="panel-body">
          {{#draggable-object content=patientObject}}
            <div class="filter-type">
              <div class="filter-type-icon">
                <i class="fa fa-user fa-fw"></i>
              </div>
              Patient
              <i class="fa fa-chevron-right filter-type-chevron"></i>
            </div>
          {{/draggable-object}}

          {{#draggable-object content=conditionObject}}
            <div class="filter-type">
              <div class="filter-type-icon">
                <i class="icon-med-clipboard"></i>
              </div>
              Condition
              <i class="fa fa-chevron-right filter-type-chevron"></i>
            </div>
          {{/draggable-object}}

          {{#draggable-object content=encounterObject}}
            <div class="filter-type">
              <div class="filter-type-icon">
                <i class="fa fa-hospital-o fa-fw"></i>
              </div>
              Encounter
              <i class="fa fa-chevron-right filter-type-chevron"></i>
            </div>
          {{/draggable-object}}
        </div>
      </div>
    </div>

    <div class="col-sm-9">
      <div class="panel filter-description-panel">
        <div class="panel-heading">
          <div class="panel-title">
            <h3>Filter Details</h3>
          </div>
        </div>

        <div class="panel-body">
          {{#draggable-object-target action="addPane"}}
            {{#if hasFilterPane}}
              {{#each pane in model.panes}}
                {{#with pane}}
                  {{render "filters/_pane" pane}}
                {{/with}}
              {{/each}}
            {{else}}
              <span class="sub-text">
                No filters. Drag filter type here.
              </span>
            {{/if}}
            <div id="save-new-filter">
              <button class="btn btn-lg btn-primary" {{action "saveFilter"}}>Save to My Filters</button>
            </div>
          {{/draggable-object-target}}
        </div>
      </div>
    </div>
  </div>
</div>
